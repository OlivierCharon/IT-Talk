{% extends 'layout.twig' %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card m-auto" style="width: 18rem;">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body" id="login-card">
          <h5 class="card-title">Se connecter à l'interface administrateur</h5>
          <form method="post" id="login" action="/users">
        
            <label for="nickname" class="mt-2 mb-2">Votre adresse email</label>
            {# <input type="text" name="nickname" class="mt-2 mb-2" id="nickname" placeholder="Nickname" required> PROD #}
            <input type="text" name="nickname" class="mt-2 mb-2" id="nickname" placeholder="Pseudo" required value="OlivierCharon"> {# DEBUG #}
        
            <label class="mt-2 mb-2" for="password">Votre mot de passe</label>
            {# <input class="mt-2 mb-2" name="password" type="password" id="password" placeholder="Mot de passe" required> PROD #}
            <input class="mt-2 mb-2" name="password" type="password" id="password" placeholder="Mot de passe" required value="Password69"> {# DEBUG #}
        
            <input class="mt-2 mb-2 btn btn-primary" type="submit"  value="Connexion">

            <div class="text-right">
              <a href="#" id="signin-link">Créer un compte <svg class="bi bi-arrow-right-short" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8.146 4.646a.5.5 0 01.708 0l3 3a.5.5 0 010 .708l-3 3a.5.5 0 01-.708-.708L10.793 8 8.146 5.354a.5.5 0 010-.708z" clip-rule="evenodd"/>
                <path fill-rule="evenodd" d="M4 8a.5.5 0 01.5-.5H11a.5.5 0 010 1H4.5A.5.5 0 014 8z" clip-rule="evenodd"/>
              </svg></i> </a>
            </div>
        
          </form>
          
        </div>

        <div class="card-body d-none" id="signin-card">
          <h5 class="card-title">Créer un compte</h5>
          <form method="post" id="signin" action="/users">

            <label class="mt-2 mb-2" for="nickname">Votre pseudo</label>
            <input class="mt-2 mb-2" type="text" name="nickname" placeholder="Pseudo" required>

            <label class="mt-2 mb-2" for="profil-picture">Votre avatar</label>
            <input type="checkbox" name='pp1' id="pp1"/><label for="pp1"></label> 
            <input type="checkbox" name='pp2' id="pp2"/><label for="pp2"></label> 
            <input type="checkbox" name='pp3' id="pp3"/><label for="pp3"></label> 
            <input type="checkbox" name='pp4' id="pp4"/><label for="pp4"></label> 
            {# <input class="mt-2 mb-2" type="text" name="profil-picture" required> #}
        
            <label for="email" class="mt-2 mb-2">Votre adresse email</label>
            <input type="email" name="email" class="mt-2 mb-2" id="email" placeholder="Email" required>
        
            <label class="mt-2 mb-2" for="password">Votre mot de passe</label>
            <input class="mt-2 mb-2" name="password" type="password" id="password" placeholder="Mot de passe" required>
            
            <label class="mt-2 mb-2" for="password2">Répéter votre mot de passe</label>
            <input class="mt-2 mb-2" name="password2" type="password" id="password2" placeholder="Mot de passe" required>
            
            <input class="mt-2 mb-2 btn btn-primary" type="submit"  value="Créer le compte">

            <div class="text-right">
              <a href="#" id="login-link">Se connecter <svg class="bi bi-arrow-right-short" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8.146 4.646a.5.5 0 01.708 0l3 3a.5.5 0 010 .708l-3 3a.5.5 0 01-.708-.708L10.793 8 8.146 5.354a.5.5 0 010-.708z" clip-rule="evenodd"/>
                <path fill-rule="evenodd" d="M4 8a.5.5 0 01.5-.5H11a.5.5 0 010 1H4.5A.5.5 0 014 8z" clip-rule="evenodd"/>
              </svg></i> </a>
            </div>
        
          </form>
          
        </div>
      </div>
     
    </div>
  </div>
  
</div>
{% endblock %}
